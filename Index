<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Mini appli QR Code</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Librairie QRCode.js via CDN -->
  <script src="https://cdn.jsdelivr.net/npm/qrcodejs@1.0.0/qrcode.min.js"></script>
  <style>
    body { font-family: Arial, sans-serif; background: #f2f2f2; }
    .container { max-width: 400px; margin: 3em auto; background: #fff; padding: 2em; border-radius: 10px; box-shadow: 0 2px 8px #aaa; }
    label { font-weight: bold; }
    input[type="text"] { width: 100%; padding: 0.5em; margin: 1em 0; border: 1px solid #ccc; border-radius: 5px; }
    button { width: 100%; padding: 0.75em; font-size: 1em; border-radius: 5px; border: none; background: #1976d2; color: #fff; cursor: pointer; }
    button:hover { background: #1565c0; }
    .qrbox { text-align: center; margin: 2em 0; }
    .linkbox { text-align: center; margin-bottom: 2em; }
    @media print {
      body { background: #fff; }
      .container { box-shadow: none; }
      button { display: none; }
    }
  </style>
</head>
<body>
  <div class="container" id="page1">
    <form id="formLink">
      <label for="inputLink">Colle ton lien ici :</label>
      <input type="text" id="inputLink" placeholder="https://..." required>
      <button type="submit">Valider</button>
    </form>
  </div>

  <div class="container" id="page2" style="display:none;">
    <h2>Page à imprimer</h2>
    <div class="qrbox" id="qrCode"></div>
    <div class="linkbox">
      <strong>Lien :</strong>
      <a id="outLink" href="" target="_blank" rel="noopener noreferrer"></a>
    </div>
    <button onclick="window.print()">Imprimer cette page</button>
  </div>

  <script>
    const form = document.getElementById('formLink');
    const input = document.getElementById('inputLink');
    const page1 = document.getElementById('page1');
    const page2 = document.getElementById('page2');
    const qrCodeDiv = document.getElementById('qrCode');
    const outLink = document.getElementById('outLink');

    form.addEventListener('submit', function(e) {
      e.preventDefault();
      const val = input.value.trim();
      if (!val) return;
      // Affiche la page 2
      page1.style.display = 'none';
      page2.style.display = 'block';
      // Génère le QR code
      qrCodeDiv.innerHTML = '';
      new QRCode(qrCodeDiv, {
        text: val,
        width: 200,
        height: 200,
        colorDark : "#000",
        colorLight : "#fff",
        correctLevel : QRCode.CorrectLevel.H
      });
      // Affiche le lien
      outLink.textContent = val;
      outLink.href = val;
    });
  </script>
</body>
</html>
